<resources>
    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="htmlText" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="bigText" parent="normalText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="bigText.Black">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="bigText.Red">
        <item name="android:textColor">#FF0000</item>
    </style>
    <style name="bigText.White">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="bigText.Blue">
        <item name="android:textColor">#0000FF</item>
    </style>
    <style name="hugeText" parent="bigText">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="hugeText.Black">
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="hugeText.Red">
        <item name="android:textColor">#ffff0000</item>
    </style>
</resources>